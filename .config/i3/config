bindsym $mod+Shift+d exec rofi -show run -drun-icon-theme ePapirus -show-icons -lines 10 -eh 2 -levenshtein-sort true -show-icons -matching fuzzy -dpi 150 -font "System San Francisco Display 18" -hlfg "#9575cd"
